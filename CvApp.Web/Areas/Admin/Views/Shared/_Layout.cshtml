<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Simple Sidebar - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/simple-sidebar.css" rel="stylesheet" />

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">CvApp Admin Panel </div>
            <div class="list-group list-group-flush">
                <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action @(TempData["active"]?.ToString()=="bilgilerim"?"active":"")">Bilgilerim</a>
                <a asp-action="ChangePassword" asp-controller="Home" class="list-group-item list-group-item-action @(TempData["active"]?.ToString()=="sifre"?"active":"")">Şifre Değişikliği</a>
                <a asp-action="Index" asp-controller="Certification" class="list-group-item list-group-item-action @(TempData["active"]?.ToString()=="sertifika"?"active":"")">Sertifikalarım</a>
                <a asp-action="Index" asp-controller="Education" asp-area="Admin" class="list-group-item list-group-item-action  @(TempData["active"]?.ToString()=="egitim"?"active":"")">Eğitim Bilgilerim</a>

                <a asp-action="Index" asp-controller="Experience" asp-area="Admin" class="list-group-item list-group-item-action  @(TempData["active"]?.ToString()=="deneyim"?"active":"")">Deneyim Bilgilerim</a>

                <a asp-action="Index" asp-controller="Interest" asp-area="Admin" class="list-group-item list-group-item-action  @(TempData["active"]?.ToString()=="hobi"?"active":"")">Hobilerim</a>

                <a asp-action="Index" asp-controller="Skill" asp-area="Admin" class="list-group-item list-group-item-action  @(TempData["active"]?.ToString()=="yetenek"?"active":"")">Yeteneklerim</a>
                <a asp-action="Index" asp-controller="SocialMediaIcon" asp-area="Admin" class="list-group-item list-group-item-action  @(TempData["active"]?.ToString()=="ikon"?"active":"")">Sosyal Medya</a>

                <a asp-action="LogOut" asp-controller="Auth" asp-area="" class="list-group-item list-group-item-action">Çıkış Yap</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-outline-primary" id="menu-toggle">Menü</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
          
            </nav>

            <div class="container-fluid p-3">

                @{ if (!string.IsNullOrWhiteSpace(TempData["message"]?.ToString()))
                    {
                        <div class="alert alert-info alert-dismissible fade show my-2" role="alert">
                            @TempData["message"].ToString()
                            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div> 
                    }
                 }


                @RenderBody()
            </div>
        </div>

        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>
