@model CertificationAddDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Add" asp-controller="Certification" method="post">

    <div class="form-group">
        <label>Sertifika Bilgisi :</label>
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
        <input asp-for="@Model.Description" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>


</form>